<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:HeBianGu.Control.Chart2D"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">


    <Style x:Key="{ComponentResourceKey ResourceId=S.EllipseMarker.Default, TypeInTargetAssembly={x:Type local:EllipseMarker}}" TargetType="local:EllipseMarker">
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Layer}, Path=Foreground}" />
        <Setter Property="Stroke" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Layer}, Path=Foreground}" />
        <Setter Property="Rect">
            <Setter.Value>
                <Rect Width="15" Height="15" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{ComponentResourceKey ResourceId=S.EllipseMarker.Animation, TypeInTargetAssembly={x:Type local:EllipseMarker}}" BasedOn="{StaticResource {x:Static h:EllipseMarker.DefaultKey}}" TargetType="local:EllipseMarker">
        <Setter Property="RenderTransform" Value="{StaticResource {x:Static h:SystemKeys.TransformGroup}}" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />

        <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag}" />
        <Setter Property="OpacityMask">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="0.3,0.3">
                    <GradientStop Offset="0" Color="Transparent" />
                    <GradientStop Offset="1" Color="White" />
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard Storyboard="{DynamicResource {x:Static h:StoryBoardKeys.ScaleEnlarge_1_2}}" /> 
                </Trigger.EnterActions>

                <Trigger.ExitActions>
                    <BeginStoryboard Storyboard="{DynamicResource {x:Static h:StoryBoardKeys.ScaleEnlargeRecovery_1_2}}" />
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>



    <Style x:Key="{ComponentResourceKey ResourceId=S.EllipseMarker.10, TypeInTargetAssembly={x:Type local:EllipseMarker}}" BasedOn="{StaticResource {x:Static h:EllipseMarker.DefaultKey}}" TargetType="local:EllipseMarker">
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Rect">
            <Setter.Value>
                <Rect Width="10" Height="10" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{ComponentResourceKey ResourceId=S.EllipseMarker.5, TypeInTargetAssembly={x:Type local:EllipseMarker}}" BasedOn="{StaticResource {x:Static h:EllipseMarker.DefaultKey}}" TargetType="local:EllipseMarker">
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Rect">
            <Setter.Value>
                <Rect Width="5" Height="5" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{ComponentResourceKey ResourceId=S.EllipseMarker.4, TypeInTargetAssembly={x:Type local:EllipseMarker}}" BasedOn="{StaticResource {x:Static h:EllipseMarker.DefaultKey}}" TargetType="local:EllipseMarker">
        <Setter Property="Fill" Value="White" />
        <Setter Property="Rect">
            <Setter.Value>
                <Rect Width="4" Height="4" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{ComponentResourceKey ResourceId=S.EllipseMarker.2, TypeInTargetAssembly={x:Type local:EllipseMarker}}" BasedOn="{StaticResource {x:Static h:EllipseMarker.DefaultKey}}" TargetType="local:EllipseMarker">
        <Setter Property="Rect">
            <Setter.Value>
                <Rect Width="2" Height="2" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{ComponentResourceKey ResourceId=S.EllipseMarker.Circle, TypeInTargetAssembly={x:Type local:EllipseMarker}}" BasedOn="{StaticResource {x:Static h:EllipseMarker.DefaultKey}}" TargetType="local:EllipseMarker">
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Fill" Value="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" />
        <Setter Property="Rect">
            <Setter.Value>
                <Rect Width="10" Height="10" />
            </Setter.Value>
        </Setter>

        <Setter Property="RenderTransform" Value="{StaticResource {x:Static h:SystemKeys.TransformGroup}}" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard Storyboard="{DynamicResource {x:Static h:StoryBoardKeys.ScaleEnlarge_1_2}}" />
                </Trigger.EnterActions>

                <Trigger.ExitActions>
                    <BeginStoryboard Storyboard="{DynamicResource {x:Static h:StoryBoardKeys.ScaleEnlargeRecovery_1_2}}" />
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style BasedOn="{StaticResource {x:Static h:EllipseMarker.DefaultKey}}" TargetType="local:EllipseMarker" />
</ResourceDictionary>

