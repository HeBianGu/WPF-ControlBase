<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:HeBianGu.Control.Chart2D">
    <DataTemplate DataType="{x:Type local:PiePresenter}">
        <local:Chart MinWidth="200"
                     Background="{x:Null}"
                     UseDrawOnce="False"
                     UseRefreshButton="False"
                     Visibility="{Binding IsVisible, Converter={x:Static h:Converter.GetTrueToVisible}}">
            <local:Series>
                <local:Pie Data="{Binding Data}"
                           Foreground="{Binding Foreground}"
                           TryFreeze="False"
                           xDisplay="{Binding xDisplay}" />
            </local:Series>
            <local:PathLegend />
        </local:Chart>
    </DataTemplate>
</ResourceDictionary>