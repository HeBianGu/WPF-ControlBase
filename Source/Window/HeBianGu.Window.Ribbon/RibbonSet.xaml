                    xmlns:local="clr-namespace:HeBianGu.Window.Ribbon">


    <Style x:Key="S.TreeView.RibbonSet" TargetType="TreeView">
        <Style.Resources>
            <HierarchicalDataTemplate DataType="{x:Type local:TabData}" ItemsSource="{Binding Path=GroupDataCollection}">
                <DockPanel>
                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsVisible}" />
                    <Button Command="{x:Static local:Commander.MoveNext}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                            Content="下移"
                            DockPanel.Dock="Right" />
                    <Button Command="{x:Static local:Commander.MovePrevious}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                            Content="上移"
                            DockPanel.Dock="Right" />
                    <TextBox VerticalAlignment="Stretch" Text="{Binding Header, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
            </HierarchicalDataTemplate>

            <HierarchicalDataTemplate DataType="{x:Type local:GroupData}" ItemsSource="{Binding Path=ControlDataCollection}">

                <DockPanel HorizontalAlignment="Stretch">
                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsVisible}" />
                    <Image Margin="5" Source="{Binding SmallImage}" />
                    <Image Margin="5,0" Source="{Binding LargeImage}" />
                    <Button Command="{x:Static local:Commander.MoveNext}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                            Content="下移"
                            DockPanel.Dock="Right" />
                    <Button Command="{x:Static local:Commander.MovePrevious}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                            Content="上移"
                            DockPanel.Dock="Right" />
                    <Button Command="{x:Static local:Commander.ChangedImage}"
                            CommandParameter="{Binding}"
                            Content="设置图片"
                            DockPanel.Dock="Right" />

                    <CheckBox Margin="5,0"
                              VerticalAlignment="Center"
                              Content="IsLabelVisible"
                              DockPanel.Dock="Right"
                              IsChecked="{Binding IsLabelVisible}"
                              Style="{DynamicResource {x:Static h:CheckBoxKeys.Box}}" />

                    <ComboBox DockPanel.Dock="Right" SelectedItem="{Binding ImageSize}">
                        <RibbonImageSize>Small</RibbonImageSize>
                        <RibbonImageSize>Large</RibbonImageSize>
                    </ComboBox>

                    <CheckBox Margin="5,0"
                              VerticalAlignment="Center"
                              Content="IsCollapsed"
                              DockPanel.Dock="Right"
                              IsChecked="{Binding IsCollapsed}"
                              Style="{DynamicResource {x:Static h:CheckBoxKeys.Box}}" />


                    <TextBox VerticalAlignment="Stretch" Text="{Binding Label, UpdateSourceTrigger=PropertyChanged}" />

                </DockPanel>
            </HierarchicalDataTemplate>

