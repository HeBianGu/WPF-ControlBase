        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeBianGu.General.WpfControlLib" 
        CaptionBackground="Transparent" CaptionHeight="0" BorderThickness="0" ShowInTaskbar="False"
        mc:Ignorable="d" Style="{DynamicResource S.Window.Notify.Default}" Background="Transparent" Height="1000" WindowState="Maximized"
        Width="520" AllowsTransparency="True">
    <Grid>
        <local:MessageContainer  Source="{Binding RelativeSource={RelativeSource AncestorType=local:NotifyMessageWindow},Path=Source,Mode=TwoWay}"/>
    </Grid>
</local:NotifyWindow>
