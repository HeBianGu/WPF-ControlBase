<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:HeBianGu.General.WpfControlLib">

    <Style TargetType="{x:Type local:Sprocket}">
        <Setter Property="TickColor" Value="{DynamicResource AccentColor}" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="TickCount" Value="12" />
        <Setter Property="IsIndeterminate" Value="False" />
        <Setter Property="Height" Value="150" />
        <Setter Property="Width" Value="150" />
        <Setter Property="Interval" Value="30" />
        <Setter Property="StartAngle" Value="-90" />
        <Setter Property="TickWidth" Value="3" />
    </Style>
</ResourceDictionary>
