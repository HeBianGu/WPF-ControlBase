<UserControl x:Class="HeBianGu.Application.ManagerWindow.View.Custom.ExpanderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.ManagerWindow.View.Custom"
             mc:Ignorable="d" 
             xmlns:h="QQ:908293466"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="C.FButton.Default" TargetType="h:FButton" BasedOn="{StaticResource S.FButton.Style.Transparent}">
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="FIcon" Value="&#xe67f;"/>
            <Setter Property="FIconSize" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <!--<Setter Property="RenderTransform" Value="{StaticResource S.TransformGroup.Default}"/>-->
        </Style>
    </UserControl.Resources>

    <ScrollViewer>
        <ItemsControl>
            <GroupBox Header="StackPanel">
                <h:ToggleExpander>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                </h:ToggleExpander>
            </GroupBox>
            <GroupBox Header="Horizontal">
                <h:ToggleExpander>
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>

                </h:ToggleExpander>
            </GroupBox>
            <GroupBox Header="UniformGrid">
                <h:ToggleExpander>
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                </h:ToggleExpander>
            </GroupBox>
            <GroupBox Header="S.Brush.TextBackground.Default">
                <h:ToggleExpander Background="{DynamicResource S.Brush.TextBackground.Default}" BorderBrush="{DynamicResource S.Brush.Accent}">
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Single" Height="300">
                <h:ToggleExpander Style="{StaticResource S.ToggleExpander.Single}">
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}" Visibility="Collapsed"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}" Visibility="Collapsed"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}" Visibility="Collapsed"/>
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Single">
                <h:ToggleExpander Style="{StaticResource S.ToggleExpander.Single}" DockPanel.Dock="Left">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Single">
                <h:ToggleExpander Style="{StaticResource S.ToggleExpander.Single}" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                </h:ToggleExpander>
            </GroupBox>


            <GroupBox Header="S.ToggleExpander.Single">
                <h:ToggleExpander Style="{StaticResource S.ToggleExpander.Single}" DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Single">
                <h:ToggleExpander Style="{StaticResource S.ToggleExpander.Single}" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid/>
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Center">
                <h:ToggleExpander Style="{StaticResource S.ToggleExpander.Center}">
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Center">
                <h:ToggleExpander Style="{StaticResource S.ToggleExpander.Center}" Margin="0,0,0,-200">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <h:ArcPanel Len="60" Margin="30" StartAngle="0" EndAngle="180" IsAnimation="False"/>
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Center">
                <h:ToggleExpander Style="{StaticResource S.ToggleExpander.Center}" Background="Red" Margin="0,0,-700,-180">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <h:ArcPanel Len="70" Margin="20" StartAngle="-10" EndAngle="100" IsAnimation="False"/>
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                    <h:FButton Style="{StaticResource C.FButton.Default}"/>
                </h:ToggleExpander>
            </GroupBox>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
