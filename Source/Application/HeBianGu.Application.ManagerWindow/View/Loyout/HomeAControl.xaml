                        </Border.Background>
                        <UniformGrid Columns="2">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="新增订单" HorizontalAlignment="Left"/>
                                <TextBlock Text="1262"  FontSize="35" Margin="0,5,0,0"/>
                            </StackPanel>

                            <TextBlock Style="{DynamicResource FIcon}" Text="&#xe730;" HorizontalAlignment="Right" Margin="30,0" Foreground="{DynamicResource S.Brush.TextForeground.White}" FontSize="55"/>
                        </UniformGrid>
                    </Border>
                </UniformGrid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
