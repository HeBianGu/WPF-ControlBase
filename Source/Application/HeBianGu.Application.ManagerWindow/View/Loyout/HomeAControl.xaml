                    </Border>

                    <Border CornerRadius="15" Width="300" Height="120">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#FF2300FF" Offset="0"/>
                                <GradientStop Color="#FF150099" Offset="1"/>
