<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.LeftControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:h="QQ:908293466"

             mc:Ignorable="d"  Width="300" 
             d:DesignHeight="1450" d:DesignWidth="800">
    <Grid>
        <h:LinkGroupExpander ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="selectloyout" 
                                         SelectedLink="{Binding SelectLink,Mode=TwoWay}"
                                         Command="{x:Static h:DrawerHost.CloseDrawerCommand}"
                                         CommandParameter="{x:Static Dock.Left}">
            <h:LinkActionGroup DisplayName="基础控件" Logo="&#xe69f;">
                <h:LinkActionGroup.Links>
                    <h:LinkAction  DisplayName="Button" Logo="&#xe69f;"  Controller="Loyout" Action="Button" />
                    <h:LinkAction  DisplayName="TextBox"  Logo="&#xe6a3;" Controller="Loyout"  Action="TextBox"/>
                    <h:LinkAction  DisplayName="Password"  Logo="&#xe6a3;" Controller="Loyout"  Action="Password"/>
                    <h:LinkAction  DisplayName="Combobox"  Logo="&#xe6a3;" Controller="Loyout" Action="Combobox"  />
                    <h:LinkAction  DisplayName="Toggle"  Logo="&#xe6a3;" Controller="Loyout" Action="Toggle"/>
                    <h:LinkAction  DisplayName="DatePicker" Logo="&#xe69f;" Controller="Loyout" Action="DatePicker"/>
                    <h:LinkAction  DisplayName="ProgressBar" Logo="&#xe69f;" Controller="Loyout" Action="ProgressBar"/>
                    <h:LinkAction  DisplayName="Slider" Logo="&#xe69f;" Controller="Loyout" Action="Slider"/>
                    <h:LinkAction  DisplayName="Evaluate" Logo="&#xe69f;" Controller="Loyout" Action="Evaluate"/>
                    <h:LinkAction  DisplayName="Expander" Logo="&#xe69f;" Controller="Loyout" Action="Expander"/>
                    <h:LinkAction  DisplayName="Gif" Logo="&#xe69f;" Controller="Loyout" Action="Gif"/>
                </h:LinkActionGroup.Links>
            </h:LinkActionGroup>

            <h:LinkActionGroup DisplayName="布局控件" Logo="&#xe69f;">
                <h:LinkActionGroup.Links>
                    <h:LinkAction  DisplayName="MdiControl" Logo="&#xe69f;" Controller="Loyout" Action="Mdi"/>
                    <h:LinkAction  DisplayName="Carouse" Logo="&#xe69e;" Controller="Loyout" Action="Carouse"/>
                    <h:LinkAction  DisplayName="Tab" Logo="&#xe69f;" Controller="Loyout" Action="Tab"/>
                    <h:LinkAction  DisplayName="Tree" Logo="&#xe69f;" Controller="Loyout" Action="Tree"/>
                    <h:LinkAction  DisplayName="ObservableSource" Logo="&#xe69f;" Controller="Loyout" Action="Observable"/>
                    <h:LinkAction  DisplayName="Property" Logo="&#xe69f;" Controller="Loyout" Action="Property"/>
                    <h:LinkAction  DisplayName="Panel" Logo="&#xe69f;" Controller="Loyout" Action="Panel"/>
                    <h:LinkAction  DisplayName="ListBox" Logo="&#xe69f;" Controller="Loyout" Action="ListBox"/>
                    <h:LinkAction  DisplayName="Document" Logo="&#xe69f;" Controller="Loyout" Action="Document"/>
                    <h:LinkAction  DisplayName="Grid" Logo="&#xe69f;" Controller="Loyout" Action="Grid"/>
                </h:LinkActionGroup.Links> 
            </h:LinkActionGroup> 

            <h:LinkActionGroup DisplayName="全局控件" Logo="&#xe69f;">
                <h:LinkActionGroup.Links>
                    <h:LinkAction  DisplayName="Message" Logo="&#xe69f;" Controller="Loyout" Action="Message"/>
                    <h:LinkAction  DisplayName="Upgrade" Logo="&#xe69e;" Controller="Loyout" Action="Upgrade"/>
                    <h:LinkAction  DisplayName="Drawer" Logo="&#xe69f;" Controller="Loyout" Action="Drawer"/>
                    <h:LinkAction  DisplayName="MessageContainer" Logo="&#xe69f;" Controller="Loyout" Action="MessageContainer"/> 
                </h:LinkActionGroup.Links>
            </h:LinkActionGroup>

            <h:LinkActionGroup DisplayName="全局样式" Logo="&#xe69f;">
                <h:LinkActionGroup.Links>
                    <h:LinkAction  DisplayName="Brush" Logo="&#xe69f;" Controller="Loyout" Action="Brush"/>
                    <h:LinkAction  DisplayName="Shadow" Logo="&#xe69f;" Controller="Loyout" Action="Shadow"/> 
                </h:LinkActionGroup.Links>
            </h:LinkActionGroup>

        </h:LinkGroupExpander>
    </Grid>

</UserControl>
