<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.ExpanderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
              xmlns:base="clr-namespace:HeBianGu.Base.WpfBase;assembly=HeBianGu.Base.WpfBase"
             xmlns:wpfcontrollib="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="1450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <GroupBox Header="导航控件">
                <wpfcontrollib:LinkGroupExpander >
                    <wpfcontrollib:LinkActionGroup DisplayName="项目管理" Logo="&#xe69f;">
                        <wpfcontrollib:LinkActionGroup.Links>
                            <wpfcontrollib:LinkAction  DisplayName="项目进度" Logo="&#xe69f;"  />
                            <wpfcontrollib:LinkAction  DisplayName="项目成本"  Logo="&#xe6a3;" />
                            <wpfcontrollib:LinkAction  DisplayName="开发周期"  Logo="&#xe6a3;"  />
                            <wpfcontrollib:LinkAction  DisplayName="人员安排"  Logo="&#xe6a3;" />
                            <wpfcontrollib:LinkAction  DisplayName="委外加工"  Logo="&#xe6a3;" />
                            <wpfcontrollib:LinkAction  DisplayName="生产排产"  Logo="&#xe6a3;" />
                            <wpfcontrollib:LinkAction  DisplayName="仓储物流"  Logo="&#xe6a3;" />
                        </wpfcontrollib:LinkActionGroup.Links>
                    </wpfcontrollib:LinkActionGroup>

                    <wpfcontrollib:LinkActionGroup DisplayName="基础管理" Logo="&#xe69f;">
                        <wpfcontrollib:LinkActionGroup.Links>
                            <wpfcontrollib:LinkAction  DisplayName="人员管理" Logo="&#xe69f;"/>
                            <wpfcontrollib:LinkAction  DisplayName="用户管理" Logo="&#xe69f;"/>
                            <wpfcontrollib:LinkAction  DisplayName="日志管理" Logo="&#xe69f;"/>
                            <wpfcontrollib:LinkAction  DisplayName="设备管理" Logo="&#xe69f;"/>
                        </wpfcontrollib:LinkActionGroup.Links>
                    </wpfcontrollib:LinkActionGroup>

                    <wpfcontrollib:LinkActionGroup DisplayName="权限管理" Logo="&#xe69f;">
                        <wpfcontrollib:LinkActionGroup.Links>
                            <wpfcontrollib:LinkAction  DisplayName="角色管理" Logo="&#xe69f;"/>
                            <wpfcontrollib:LinkAction  DisplayName="用户管理" Logo="&#xe69f;"/>
                            <wpfcontrollib:LinkAction  DisplayName="权限管理" Logo="&#xe69f;"/>
                            <wpfcontrollib:LinkAction  DisplayName="策略管理" Logo="&#xe69f;"/>
                        </wpfcontrollib:LinkActionGroup.Links>
                    </wpfcontrollib:LinkActionGroup>

                </wpfcontrollib:LinkGroupExpander>

            </GroupBox>
            <GroupBox Header="导航控件样式一">
                <StackPanel>
                    <Grid>
                        <wpfcontrollib:FExpander Header="可以折叠并展开" IsExpanded="True" IconFont="&#xe664;">
                            <StackPanel>
                                <wpfcontrollib:FExpander Header="子内容长标题测试" Hint="1 / 100" />
                                <wpfcontrollib:FExpander  Header="Button" />
                                <wpfcontrollib:FExpander  Header="Button" />
                                <wpfcontrollib:FExpander Header="Button" />
                            </StackPanel>
                        </wpfcontrollib:FExpander>
                    </Grid>
                    <Grid>
                        <wpfcontrollib:FExpander Header="可以折叠没展开" IsExpanded="false" IconFont="&#xe664;" >
                            <StackPanel>
                                <wpfcontrollib:FExpander Header="子内容长标题测试"  Hint="1 / 100" />
                                <wpfcontrollib:FExpander  Header="Button" />
                                <wpfcontrollib:FExpander  Header="Button" />
                                <wpfcontrollib:FExpander Header="Button" />
                            </StackPanel>
                        </wpfcontrollib:FExpander>
                    </Grid>

                    <Grid>
                        <wpfcontrollib:FExpander Header="不可以折叠" CanHide="false" IconFont="&#xe664;">
                            <StackPanel>
                                <wpfcontrollib:FExpander Header="子内容长标题测试" Hint="1 / 100" />
                                <wpfcontrollib:FExpander  Header="Button" />
                                <wpfcontrollib:FExpander  Header="Button" />
                                <wpfcontrollib:FExpander Header="Button" />
                            </StackPanel>
                        </wpfcontrollib:FExpander>
                    </Grid>

                    <Grid>
                        <wpfcontrollib:FExpander Header="多个导航嵌套" IsExpanded="false" IconFont="&#xe664;">
                            <StackPanel>
                                <wpfcontrollib:FExpander Header="子内容长标题测试" IconFont="&#xe664;" Hint="1 / 100" />
                                <wpfcontrollib:FExpander  Header="子内容" IconFont="&#xe664;" Hint="1 / 2">
                                    <StackPanel>
                                        <wpfcontrollib:FExpander  Header="Button"/>
                                    </StackPanel>
                                </wpfcontrollib:FExpander>
                                <wpfcontrollib:FExpander  Header="Button" />
                                <wpfcontrollib:FExpander Header="Button" />
                            </StackPanel>
                        </wpfcontrollib:FExpander>
                    </Grid>

                    <Grid>
                        <wpfcontrollib:FExpander Header="嵌套其他控件" IsExpanded="True" IconFont="&#xe664;">
                            <StackPanel>
                                <wpfcontrollib:FButton Content="FBtutton" Style="{StaticResource S.FButton.Style.Link}"/>
                                <wpfcontrollib:FCheckBox Content="FCheckBox"/>
                                <RadioButton Content="RadioButton"/>
                                <TextBlock Text="RadioButton"/>
                            </StackPanel>
                        </wpfcontrollib:FExpander>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="导航控件样式二">
                <StackPanel>
                    <Expander HorizontalAlignment="Stretch" Style="{StaticResource MaterialDesignExpander}"
                              Header="Expander Example 1a">
                        <StackPanel Orientation="Vertical"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="24,8,24,16">
                            <TextBlock Text="Your Content" />
