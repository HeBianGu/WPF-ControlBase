<Page x:Class="WpfControlDemo.View.NotifyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlDemo.View"
      xmlns:h="QQ:908293466"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1000"
      Title="NotifyPage">

    <Page.Resources>
        <Storyboard x:Key="IconAnimation">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Icon" Storyboard.TargetName="notifyIcon"
                                           Duration="0:0:2" RepeatBehavior="Forever">
                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                    <DiscreteObjectKeyFrame.Value>
                        <ImageSource>/HeBianGu.Applications.ControlBase.Demo;component/Resources/Patrick 1.ico</ImageSource>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
                <DiscreteObjectKeyFrame KeyTime="0:0:1">
                    <DiscreteObjectKeyFrame.Value>
                        <ImageSource>/HeBianGu.Applications.ControlBase.Demo;component/Resources/Patrick 2.ico</ImageSource>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <DockPanel>
        <StackPanel Margin="20">
            <Button Name="b" Content="显示托盘气泡" Click="Button_Click" HorizontalAlignment="Left" Margin="2" />

            <CheckBox Content="动画显示" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"
                      HorizontalAlignment="Left" Margin="2" />

            <h:NotifyIcon Name="notifyIcon" 
                                      Icon="/HeBianGu.Applications.ControlBase.Demo;component/Resources/Spongebob.ico"
                           Text="NotifyIcon Demo"
                           IconVisibility="Visible">
                <FrameworkElement.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Some Text" />
                        <MenuItem>
                            <MenuItem.Header>
                                <Grid>
                                    <Ellipse StrokeThickness="2" Stroke="Red" />
                                    <TextBlock Text="[b]WPF[/] Content" />
                                </Grid>
                            </MenuItem.Header>
                        </MenuItem>
                    </ContextMenu>
                </FrameworkElement.ContextMenu>
            </h:NotifyIcon>

        </StackPanel>
    </DockPanel>
</Page>
